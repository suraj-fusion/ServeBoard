<%- include('partials/userheader'); %>


<div class="container mt-5">
    <h1>Enter Details of your Demand</h1>
  
    <div class="row">
      <div class="col-sm-4" style=" text-align:center;margin-left:32%;">
        <div class="card">
          <div class="card-body">
  
            <!-- Makes POST request to /login route -->
            <form action="/userdemand" method="POST">
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="email">
              </div>
              <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" name="name">
              </div>
              <div class="form-group">
                <label for="description">Description</label>
                <input type="text" class="form-control" name="description">
              </div>
              <div class="form-group">
                <label for="location">Location</label>
                <input type="text" class="form-control" name="location">
              </div>
              <div class="form-group">
                <label for="category">Category</label>
                <input type="text" class="form-control" name="category">
              </div>
              <button type="submit" class="btn " style="background-color:#5E38F8 ;color:white" >Submit</button>
            </form>
  
          </div>
        </div>
      </div>


    </div>
</div>









<%- include('partials/footer'); %>